include /usr/share/doc/newsboat/contrib/colorschemes/kinda-maia

show-title-bar no
auto-reload yes
reload-time 120
reload-threads 4
max-items 150
browser "qutebrowser --target window %u"
highlight feedlist "---.*---" green default bold
highlight feedlist ".*0/0.."  default default invis

macro t set browser "qutebrowser %u"; open-in-browser; set browser "qutebrowser ==target window %u"

bind-key j next
bind-key k prev
bind-key J next-feed
bind-key K prev-feed
bind-key j down article
bind-key k up article
bind-key J next article
bind-key K prev article
